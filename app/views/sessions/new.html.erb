<% page_title "Log In" %>
<h1>Log in</h1>
<%= form_tag login_path do %>
	<div class="form-group row">
		<%= label_tag 'email', nil, class: 'col-md-2' %>
		<div class="col-md-10">
			<%= email_field_tag :email, nil, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group row">
		<%= label_tag 'password', nil, class: 'col-md-2' %>
		<div class="col-md-10">
			<%= password_field_tag :password, nil, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group row">
		<%= label_tag 'password confirmation', nil, class: 'col-md-2' %>
		<div class="col-md-10">
			<%= password_field_tag :password_confirmation, nil, class: 'form-control' %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-offset-2 col-md-10">
			<%= submit_tag 'Log In', class: 'btn btn-success' %>
		</div>
	</div>
<% end %>